# Environment Configuration for KOM Backend
# Copy this file to .env and fill in the values

# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# Database (PostgreSQL on Neon)
DATABASE_URL="postgresql://username:password@host:5432/kom_db?sslmode=require"

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRATION=7d

# Super Admin (created on seed)
SUPER_ADMIN_EMAIL=admin@kom.bh
SUPER_ADMIN_PASSWORD=SecureAdminPassword123!

# S3 Compatible Storage (AWS S3 or Cloudflare R2)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=me-south-1
S3_BUCKET=kom-media
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
PUBLIC_CDN_BASE_URL=https://cdn.kom.bh

# Presigned URL Expiration (seconds)
PRESIGN_UPLOAD_EXPIRATION=3600
PRESIGN_DOWNLOAD_EXPIRATION=86400

# Payment Configuration
REQUIRE_PAYMENT_FOR_CAR_LISTING=true
LISTING_FEE_BHD=3

# Media Limits
MAX_IMAGES_PER_LISTING=15
MAX_VIDEOS_PER_LISTING=2
MAX_IMAGE_SIZE_MB=10
MAX_VIDEO_SIZE_MB=100

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=100
THROTTLE_LOGIN_LIMIT=5
THROTTLE_UPLOAD_LIMIT=30

# Push Notifications (FCM - optional for MVP)
FCM_PROJECT_ID=
FCM_PRIVATE_KEY=
FCM_CLIENT_EMAIL=

# Redis (optional - for caching/rate limiting)
REDIS_URL=
